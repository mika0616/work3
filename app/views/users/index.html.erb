<div class="container">
	<div class="row">
		<%= render 'books/list' %>
		<div class="col-md-9">
			<h2>Users</h2>
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th>name</th>
						<th>show</th>
					</tr>
				</thead>
				<tbody>
					<% @users.each do |user| %>
					<tr>
						<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format:'jpeg', fallback:'no_image.jpg', size: '50x50' %></td>
						<td><%= user.name %></td>
						<td><%= link_to 'Show', user_path(user.id) %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>