<!DOCTYPE html>
<html>
  <head>
    <title>BookersLevel2</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar bavbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span class="header-title">Bookers</span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>
              <%= link_to user_path(current_user.id) do %>
                <span class="glyphicon glyphicon-home" aria-hidden="true">Home
              <% end %>
            </li>
            <li>
              <%= link_to users_path do %>
              <span class="glyphicon glyphicon-user" aria-hidden="true"></span>User
              <% end %>
            </li>
            <li>
              <%= link_to books_path do %>
              <span class="glyphicon glyphicon-book" aria-hidden="true"></span>Book
              <% end %>
            </li>
            <li>
              <%= link_to 'logout', destroy_user_session_path, method: :delete, class:"glyphicon glyphicon-log-out" %>
            </li>
          <% else %>
            <li>
              <%= link_to 'Home', root_path, class:"glyphicon glyphicon-home" %>
            </li>
            <li>
              <%= link_to 'About', homes_about_path, class:"glyphicon glyphicon-link" %>
            </li>
            <li>
              <%= link_to 'sign up', new_user_registration_path, class:"glyphicon glyphicon-edit" %>
            </li>
            <li>
              <%= link_to 'login', new_user_session_path, class:"glyphicon glyphicon-log-in" %>
            </li>
          <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <%= yield %>

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-lg-3 col-lg-offset-9">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
